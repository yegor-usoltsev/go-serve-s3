{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:all",
    "schedule:weekends",
    ":reviewer(yegor-usoltsev)"
  ],
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths",
    "gomodMassage"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Go version",
      "fileMatch": [
        "(^|/)go\\.mod$"
      ],
      "matchStrings": [
        "\\sgo (?<currentValue>.+?)\\s"
      ],
      "datasourceTemplate": "golang-version",
      "depNameTemplate": "go"
    }
  ],
  "packageRules": [
    {
      "matchFiles": [
        "third_party/http-cache/go.mod"
      ],
      "enabled": false
    }
  ]
}
